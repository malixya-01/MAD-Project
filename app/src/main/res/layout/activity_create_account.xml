<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".createAccountActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/top_background1" />

        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="183dp"
            android:layout_height="98dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="48dp"
            android:text="Create Account"
            android:textColor="#3F51B5"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imBg" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="182dp"
            app:cardCornerRadius="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imBg">

            <ImageView
                android:id="@+id/createAccDp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/etName"
            android:layout_width="340dp"
            android:layout_height="@dimen/signUpformEditTextHeight"
            android:layout_marginTop="24dp"
            android:drawableStart="@drawable/card_view_person"
            android:drawablePadding="@dimen/eTdrawablePadding"
            android:drawableTint="@color/formIconsColour"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="340dp"
            android:layout_height="@dimen/signUpformEditTextHeight"
            android:layout_marginTop="@dimen/signUpformEditTextTopMargin"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="@dimen/eTdrawablePadding"
            android:drawableTint="@color/formIconsColour"
            android:ems="10"
            android:hint="Emaill"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="340dp"
            android:layout_height="@dimen/signUpformEditTextHeight"
            android:layout_marginTop="@dimen/signUpformEditTextTopMargin"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawablePadding="@dimen/eTdrawablePadding"
            android:ems="10"
            android:hint="Phone No"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="340dp"
            android:layout_height="@dimen/signUpformEditTextHeight"
            android:layout_marginTop="@dimen/signUpformEditTextTopMargin"
            android:drawableStart="@drawable/baseline_add_location_24"
            android:drawablePadding="@dimen/eTdrawablePadding"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPhone" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="338dp"
            android:layout_height="@dimen/signUpformEditTextHeight"
            android:layout_marginTop="@dimen/signUpformEditTextTopMargin"
            android:drawableStart="@drawable/password"
            android:drawablePadding="@dimen/eTdrawablePadding"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAddress" />

        <EditText
            android:id="@+id/etConfirmPwd"
            android:layout_width="338dp"
            android:layout_height="@dimen/signUpformEditTextHeight"
            android:layout_marginTop="@dimen/signUpformEditTextTopMargin"
            android:drawableStart="@drawable/password"
            android:drawablePadding="@dimen/eTdrawablePadding"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword" />

        <Button
            android:id="@+id/btnCreateAcc"
            android:layout_width="341dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:text="Create Account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etConfirmPwd" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>